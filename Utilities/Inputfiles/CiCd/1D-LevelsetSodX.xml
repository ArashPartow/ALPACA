<?xml version="1.0" encoding="utf-8"?>
<!-- Classical Sod test case adapted for a level-set setup -->
<configuration>
    <domain>
        <nodeSize> 0.25  </nodeSize>

        <nodeRatio>
            <x> 4 </x>
            <y> 1 </y>
            <z> 1 </z>
        </nodeRatio>

        <boundaryConditions>
            <material>
                <west>   Symmetry </west>
                <east>   Symmetry </east>
                <south>  Symmetry </south>
                <north>  Symmetry </north>
                <bottom> Symmetry </bottom>
                <top>    Symmetry </top>
            </material>

            <levelSet>
                <west>   symmetry </west>
                <east>   symmetry </east>
                <south>  symmetry </south>
                <north>  symmetry </north>
                <bottom> symmetry </bottom>
                <top>    symmetry </top>
            </levelSet>
        </boundaryConditions>

        <initialConditions>
            <material1>
                if (x &lt; 0.5)
                {
                density := 1.0;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 1.0;
                }
                else
                {
                density := 0.125;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 0.1;
                }
            </material1>
            <material2>
                if (x &lt; 0.5)
                {
                density := 1.0;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 1.0;
                }
                else
                {
                density := 0.125;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 0.1;
                }
            </material2>

            <levelSet1>
                phi := 0.5-x;
            </levelSet1>
        </initialConditions>
    </domain>

    <materials>
        <numberOfMaterials> 2 </numberOfMaterials>
        <material1>
            <equationOfState>
                <type> StiffenedGas </type>
                <gamma>               1.4   </gamma>
                <backgroundPressure>  0.0   </backgroundPressure>
            </equationOfState>
            <properties>
                <specificHeatCapacity>       0.0   </specificHeatCapacity>
                <thermalConductivity>       0.0   </thermalConductivity>
                <shearViscosity>          0.0   </shearViscosity>
                <bulkViscosity>           0.0   </bulkViscosity>
            </properties>
        </material1>
        <material2>
            <equationOfState>
                <type> StiffenedGas </type>
                <gamma>               1.4   </gamma>
                <backgroundPressure>  0.0   </backgroundPressure>
            </equationOfState>
            <properties>
                <specificHeatCapacity>       0.0   </specificHeatCapacity>
                <thermalConductivity>       0.0   </thermalConductivity>
                <shearViscosity>          0.0   </shearViscosity>
                <bulkViscosity>           0.0   </bulkViscosity>
            </properties>
        </material2>

    </materials>

    <materialPairings>
        <material1_2>
            <surfaceTensionCoefficient> 0.0 </surfaceTensionCoefficient>
        </material1_2>
    </materialPairings>

    <sourceTerms>
       <gravity>
            <x> 0 </x>
            <y> 0 </y>
            <z> 0 </z>
       </gravity>
    </sourceTerms>

    <multiResolution>
        <maximumLevel> 4 </maximumLevel>

        <refinementCriterion>
            <epsilonReference> 0.01 </epsilonReference>
            <levelOfEpsilonReference> 4 </levelOfEpsilonReference>
        </refinementCriterion>
    </multiResolution>

    <timeControl>
        <startTime> 0.0 </startTime>
        <endTime>   0.2 </endTime>
        <CFLNumber> 0.5 </CFLNumber>
    </timeControl>

    <dimensionalization>
        <lengthReference>         1  </lengthReference>
        <velocityReference>       1  </velocityReference>
        <densityReference>        1  </densityReference>
        <temperatureReference>    1  </temperatureReference>
    </dimensionalization>

    <restart>
        <restore>
            <mode> Off </mode> <!-- Off, Soft OR Forced -->
            <fileName> inputfile/restart/restart_***.h5 </fileName>
        </restore>
        <snapshots>
            <type> Interval </type> <!-- Off, Stamps, Interval OR Stamps Interval -->
            <interval> 3600 </interval> <!-- in wall seconds -->
            <intervalsToKeep> 2 </intervalsToKeep>
        </snapshots>
    </restart>

    <output>
        <timeNamingFactor> 1.e1 </timeNamingFactor>
        <standardOutput> <!-- for general or debug output -->
            <type> Interval </type> <!--Off, Interval, Stamps OR IntervalStamps-->
            <interval>  1.0 </interval>
            <stamps>
                <ts1> 0.0004 </ts1>
            </stamps>
        </standardOutput>
        <interfaceOutput>
            <type> Interval </type> <!--Off, Interval, Stamps OR IntervalStamps-->
            <interval>  1.0 </interval>
            <stamps>
                <ts1>  0.0004 </ts1>
            </stamps>
        </interfaceOutput>
    </output>
</configuration>
