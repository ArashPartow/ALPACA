<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <domain>
        <!-- size of a single block on level 0 -->
        <nodeSize> 5.0  </nodeSize>

        <!-- number of nodes per dimension-->
        <nodeRatio>
            <x> 1 </x>
            <y> 1 </y>
            <z> 1 </z>
        </nodeRatio>

        <boundaryConditions>
            <material>
                <!--types of material boundary conditions:
                zeroGradient,
                symmetry,
                Wall
                -->
                <west>wall</west>
                <east>wall</east>
                <south>wall</south>
                <north>wall</north>
                <bottom>symmetry</bottom>
                <top>symmetry</top>
            </material>

            <!-- TO BE IMPLEMENTED -->
            <levelSet>
                <!--types of level-set boundary conditions:
                zeroGradient
                Symmetry
                -->
                <west>   symmetry </west>
                <east>   symmetry </east>
                <south>  symmetry </south>
                <north>  symmetry </north>
                <bottom> symmetry </bottom>
                <top>    symmetry </top>
            </levelSet>
            <!-- END - TO BE IMPLEMENTED -->
        </boundaryConditions>

        <initialConditions>
            <material1>
                density : = 0.001;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 1000.0;
            </material1>

            <!-- TO BE IMPLEMENTED -->
            <material2>
                density := 1.0;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 1000.0;
            </material2>

            <levelSet1>
                phi := -0.5 + sqrt( (x-2.5)*(x-2.5)+(y-2.5)*(y-2.5) );
            </levelSet1>
            <!-- END - TO BE IMPLEMENTED -->
        </initialConditions>
    </domain>

    <!-- Fluids -->
    <!--Material Types: StiffenedGas, IdealGas, Waterlike (Tait)-->
    <materials>
        <numberOfMaterials>              2   </numberOfMaterials>
        <material1>
            <equationOfState>
                <type>WaterlikeFluid</type>
                <gamma>                     1.4   </gamma>
                <A>                         1000.0   </A>
                <B>                         100.0   </B>
                <C>                         0.0   </C>
                <rho0>                      0.001   </rho0>
                <specificGasConstant>       0.0   </specificGasConstant>
            </equationOfState>
            <properties>
                <specificHeatCapacity>       0.0   </specificHeatCapacity>
                <thermalConductivity>       0.0   </thermalConductivity>
                <shearViscosity>          4.0e-03   </shearViscosity>
                <bulkViscosity>           0.0   </bulkViscosity>
            </properties>
        </material1>

        <!-- TO BE IMPLEMENTED -->
        <material2>
            <equationOfState>
                <type>StiffenedGasSafe</type>
                <gamma>                     7.15   </gamma>
                <A>                         1015.0   </A>
                <B>                         1.0e04   </B>
                <C>                         0.0   </C>
                <rho0>                      1.0   </rho0>
                <specificGasConstant>       0.0   </specificGasConstant>
            </equationOfState>
            <properties>
                <specificHeatCapacity>       0.0   </specificHeatCapacity>
                <thermalConductivity>       0.0   </thermalConductivity>
                <shearViscosity>          0.25   </shearViscosity>
                <bulkViscosity>           0.0   </bulkViscosity>
            </properties>
        </material2>

    </materials>

    <materialPairings>
        <material1_2>
            <surfaceTensionCoefficient> 7.5 </surfaceTensionCoefficient>
        </material1_2>
    </materialPairings>

    <sourceTerms>
        <gravity>
            <x> 0.0 </x>
            <y> -300.0 </y>
            <z> 0.0 </z>
        </gravity>
    </sourceTerms>

    <multiResolution>
        <maximumLevel> 0 </maximumLevel>

        <refinementCriterion>
            <epsilonReference>    0.01 </epsilonReference>
            <!-- user_level_of_epsilon_ref: allowed values [0-12] -->
            <levelOfEpsilonReference> 1  </levelOfEpsilonReference>
        </refinementCriterion>
    </multiResolution>

    <timeControl>
        <startTime>            0.0           </startTime>
        <endTime>              1.0e-6           </endTime>
        <CFLNumber> 0.9 </CFLNumber>
    </timeControl>


    <dimensionalization>
        <lengthReference>       1  </lengthReference>
        <velocityReference>     1  </velocityReference>
        <densityReference>      1  </densityReference>
        <temperatureReference>  1  </temperatureReference>
    </dimensionalization>

    <restart>
        <restore>
            <mode> Off </mode> <!-- Off, Soft OR Forced -->
            <fileName> inputfile/restart/restart_***.h5 </fileName>
        </restore>
        <snapshots>
            <type> Interval </type> <!-- Off, Stamps, Interval OR Stamps Interval -->
            <interval> 3600 </interval> <!-- in wall seconds -->
            <intervalsToKeep> 2 </intervalsToKeep>
        </snapshots>
    </restart>

    <output>
        <timeNamingFactor> 1.e4 </timeNamingFactor>
        <standardOutput> <!-- for general or debug output -->
            <type> Interval </type> <!--Off, Interval, Stamps OR IntervalStamps-->
            <interval>  1.0 </interval>
            <stamps>
                <ts1> 0.0004 </ts1>
            </stamps>
        </standardOutput>
        <interfaceOutput>
            <type> Interval </type> <!--Off, Interval, Stamps OR IntervalStamps-->
            <interval>  1.0 </interval>
            <stamps>
                <ts1>  0.0004 </ts1>
            </stamps>
        </interfaceOutput>
    </output>
</configuration>
