<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <domain>
        <nodeSize> 0.25  </nodeSize>

        <nodeRatio>
            <x> 4 </x>
            <y> 1 </y>
            <z> 1 </z>
        </nodeRatio>

        <boundaryConditions>
            <material>
                <west>   Wall </west>
                <valuesWest>
                    <density>1.0</density>
                    <velocityX>1.0</velocityX>
                    <velocityY>0.0</velocityY>
                    <velocityZ>0.0</velocityZ>
                    <pressure>1.0</pressure>
                </valuesWest>
                <east>   Wall </east>
                <valuesEast>
                    <density>1.0</density>
                    <velocityX>1.0</velocityX>
                    <velocityY>0.0</velocityY>
                    <velocityZ>0.0</velocityZ>
                    <pressure>1.0</pressure>
                </valuesEast>
                <south>  Symmetry </south>
                <north>  Symmetry </north>
                <bottom> Symmetry </bottom>
                <top>    Symmetry </top>
            </material>

            <levelSet>
                <west>   symmetry </west>
                <east>   symmetry </east>
                <south>  symmetry </south>
                <north>  symmetry </north>
                <bottom> symmetry </bottom>
                <top>    symmetry </top>
            </levelSet>
        </boundaryConditions>

        <initialConditions>
            <material1>
                density := 0.01;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 1000.0;
            </material1>
            <material2>
                density := 1.0;
                velocityX := 0.0;
                velocityY := 0.0;
                velocityZ := 0.0;
                pressure := 1.0;
            </material2>

            <levelSet1>
                phi := 0.5-x;
            </levelSet1>
        </initialConditions>
    </domain>

    <materials>
        <numberOfMaterials> 2 </numberOfMaterials>
        <material1>
            <equationOfState>
                <type>StiffenedGas</type>
                <gamma>                     2.0   </gamma>
                <A>                         0.0   </A>
                <B>                         0.0   </B>
                <C>                         0.0   </C>
                <rho0>                      1.2   </rho0>
                <specificGasConstant>       1.0   </specificGasConstant>
            </equationOfState>
            <properties>
                <specificHeatCapacity> 0.0 </specificHeatCapacity>
                <thermalConductivity> 0.0 </thermalConductivity>
                <shearViscosity> 0.0 </shearViscosity>
                <bulkViscosity> 0.0 </bulkViscosity>
            </properties>
        </material1>
        <material2>
            <equationOfState>
                <type>WaterlikeFluid</type>
                <gamma>                     7.15   </gamma>
                <A>                         1.0    </A>
                <B>                         3.31e3 </B>
                <C>                         0.0    </C>
                <rho0>                      1.0    </rho0>
                <specificGasConstant>       1.0   </specificGasConstant>
            </equationOfState>
            <properties>
                <specificHeatCapacity> 0.0 </specificHeatCapacity>
                <thermalConductivity> 0.0 </thermalConductivity>
                <shearViscosity> 0.0 </shearViscosity>
                <bulkViscosity> 0.0 </bulkViscosity>
            </properties>
        </material2>  
    </materials>

    <multiResolution>
        <maximumLevel> 3 </maximumLevel>

        <refinementCriterion>
            <epsilonReference> 0.01 </epsilonReference>
            <levelOfEpsilonReference> 2 </levelOfEpsilonReference>
        </refinementCriterion>
    </multiResolution>

   <timeControl>
       <startTime> 0.0 </startTime>
       <endTime>   0.005 </endTime>
       <CFLNumber> 0.5 </CFLNumber>
   </timeControl>

   <dimensionalization>
       <lengthReference>         1  </lengthReference>
       <velocityReference>       1  </velocityReference>
       <densityReference>        1  </densityReference>
       <temperatureReference>    1  </temperatureReference>
   </dimensionalization>

   <restart>
      <restore>
         <mode> Off </mode> <!-- Off, Soft OR Forced -->
         <fileName> inputfile/restart/restart_***.h5 </fileName>
      </restore>
      <snapshots>
         <type> Interval </type> <!-- Off, Stamps, Interval OR Stamps Interval -->
         <interval> 3600 </interval> <!-- in wall seconds -->
         <intervalsToKeep> 2 </intervalsToKeep> 
      </snapshots>
   </restart>

   <output>
      <timeNamingFactor> 1.e0 </timeNamingFactor>
      <standardOutput> <!-- for general or debug output -->
         <type> Interval </type> <!--Off, Interval, Stamps OR IntervalStamps-->
         <interval>  0.0005 </interval>
	      <stamps>
            <ts1> 0.0004 </ts1>
         </stamps>
      </standardOutput>
      <interfaceOutput> 
         <type> Off </type> <!--Off, Interval, Stamps OR IntervalStamps-->
         <interval>  1e3 </interval>
	      <stamps>
            <ts1>  0.0004 </ts1>
         </stamps>
      </interfaceOutput>
   </output>
</configuration>
